    <select id="selectPagedList" resultType="com.kamfu.entity.User" parameterType="com.kamfu.model.UserParam" >
        select
        <include refid="BaseColumn"/> 
        from user where 1=1
        <if test="param.deptId != null and param.deptId != ''">
        and dept_id =#{param.deptId}
        </if>
        limit #{param.start},#{param.end}
    </select>
    <select id="getByUsername" resultType="com.kamfu.entity.User">
        select
        <include refid="BaseColumn"/>
        from user where username = #{username} 
    </select>

